{
  "name": "mqwerty/service-manager",
  "license": "MIT",
  "description": "",
  "authors": [
    {
      "name": "Dmitrii Elkin",
      "email": "de@mqwerty.ru"
    }
  ],
  "config": {
    "optimize-autoloader": true,
    "sort-packages": true
  },
  "autoload": {
    "psr-4": {
      "Mqwerty\\ServiceManager\\": "src"
    }
  },
  "require": {
    "php": "^7.4",
    "psr/container": "^1.0"
  },
  "require-dev": {
    "phan/phan": "^3.0",
    "phpmd/phpmd": "^2.8",
    "phpunit/phpunit": "^9.2",
    "roave/security-advisories": "dev-master",
    "squizlabs/php_codesniffer": "^3.5"
  },
  "scripts": {
    "test": "phpunit",
    "cover": "phpunit --coverage-text",
    "cover:xml": "phpunit --coverage-xml tests/coverage",
    "cover:html": "phpunit --coverage-html tmp/coverage-html",
    "stan:md": "phpmd ./src ansi ./phpmd.xml",
    "stan:phan": "phan --color --progress-bar --allow-polyfill-parser",
    "cs:check": "phpcs ./src --standard=PSR12",
    "cs:fix": "phpcbf ./src --standard=PSR12",
    "check": [
      "@cs:check",
      "@stan:md",
      "@stan:phan",
      "@test"
    ]
  }
}
